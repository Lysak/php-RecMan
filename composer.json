{
  "config": {
    "soft-package": true
  },
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-sqlite3": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "src\\": "src/",
      "components\\": "components/",
      "public\\": "public/"
    },
    "files": [
      "src/core/functions.php"
    ]
  },
  "scripts": {
    "serve": "php8.2 -S 0.0.0.0:8080 -t public"
  }
}
